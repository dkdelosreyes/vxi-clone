<script>
  /* Add Resize lister to Home page */
  resizeHandler();
  document.body.onresize = resizeHandler;
  function resizeHandler(e) {
    var carousel_height = document.getElementById('mainCarousel').offsetHeight;
    if(carousel_height > 500) {
      console.log('resizeHandler', carousel_height);
      document.getElementById('section-slider').style.height = carousel_height - 1 + 'px';
    }
  }

  /* Scroll to top animation */
  function scrollToTop(scrollDuration) {
    var scrollStep = -window.scrollY / (scrollDuration / 15),
      scrollInterval = setInterval(function(){
      if ( window.scrollY != 0 ) {
          window.scrollBy( 0, scrollStep );
      }
      else clearInterval(scrollInterval); 
    },15);
  }

  /* FB API  */
  function getUserData() {
    FB.api('/me', {fields: 'first_name, last_name'}, function(response) {
      $('#applicant_first_name').val(response.first_name);
      $('#applicant_last_name').val(response.last_name);
      console.log('getUserData', response);
    });
  }
  /* Commented out to remove localhost error */
  window.fbAsyncInit = function() {
    //SDK loaded, initialize it
    FB.init({
      appId      : '929935887215359',
      xfbml      : true,
      version    : 'v2.8'
    });
   console.log('fbAsyncInit');
    //check user session and refresh it
    FB.getLoginStatus(function(response) {
      if (response.status === 'connected') {
        //user is authorized
        getUserData();
      } else {
        //user is not authorized
        console.log('please log in');
      }
    });
  };
   
  //load the JavaScript SDK
  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.com/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
   
  //add event listener to login button
  document.getElementById('BtnFB').addEventListener('click', function(e) {
    e.preventDefault();
    //do the login
    FB.login(function(response) {
      if (response.authResponse) {
        //user just authorized your app
        getUserData();
      }
    }, {scope: 'email,public_profile', return_scopes: true});
  }, false);
</script>