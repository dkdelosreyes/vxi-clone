<%= provide(:title, 'Locations') %>
<h1><%= yield :title %></h1>

<%= link_to 'Add Location', new_admin_location_path %>
<table class="table table-hover">
	<thead>
		<tr>
            <th>Title</th>
            <th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
    <% @locations.each do |data| %>
    <tr>
    	<td><%= data.title %></td>
        <td><%= data.status.title %></td>
        <td>
            <%= link_to "Show", admin_location_path(data) %>
            <%= link_to "Edit", edit_admin_location_path(data) %>
            <%= link_to "Delete", [:admin, data], method: :delete, data: {confirm: "Are you sure?"} %>  
        </td>
    </tr>
    <% end %>
    </tr>
  </tbody>
</table>

<%= will_paginate @locations %>