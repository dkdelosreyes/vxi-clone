<% if @source_info.errors.any? %>
	<% @source_info.errors.full_messages.each do |message| %>
		<%= message %><br>
	<% end %>
<% end %>

<%= form_with( model: [:admin, @source_info], local: true ) do |f| %>

	<%= f.label "Title" %>
	<%= f.text_field :title, class: "form-control" %>

	<%= f.label "Status" %>
	<%= f.collection_select :status_id, @statuses, :id, :title, {:selected => @source_info.status_id}, class: "form-control" %>

	<%= f.submit "Submit", class: "btn btn-primary" %>
	<%= button_tag 'Cancel', type: :reset, class: "btn btn-default"  %>
<% end %>