<% if @blog.errors.any? %>
	<% @blog.errors.full_messages.each do |message| %>
		<%= message %><br>
	<% end %>
<% end %>

<%= form_with( model: [:admin, @blog], local: true ) do |f| %>

	<%= f.label "Title" %>
	<%= f.text_field :title, class: "form-control" %>

	<%= f.label "Description" %>
	<%= f.text_area :description, class: "form-control" %>

	<%= f.label "Status" %>
	<%= f.collection_select :status_id, @statuses, :id, :title, {:selected => @blog.status_id}, class: "form-control" %>

	<%= f.label 'Photo' %>
    <%= f.file_field :photo%>

	<%= f.submit "Submit", class: "btn btn-primary" %>
	<%= button_tag 'Cancel', type: :reset, class: "btn btn-default"  %>
<% end %>