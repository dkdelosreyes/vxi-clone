$white: #fff;
$yellow: #FCEE18;
$pink: #d41c65;
$gray-light: #ccc;
$blue-light: #3b5898;
$blue-dark: #143884;
$black: #000;

$alpha-p2: .2;
$alpha-p3: .3;

@mixin box-shadow($top, $right, $bottom, $left, $bg) {
	-webkit-box-shadow: $top $right $bottom $left $bg;
  box-shadow: $top $right $bottom $left $bg;
}
@mixin background-fb($color-start, $color-stop) {
	background: $color-start;
  background: -moz-linear-gradient(top, $color-start 0%, $color-stop 100%);
  background: -webkit-gradient(left top, left bottom, color-stop(0%, $color-start), color-stop(100%, $color-stop));
  background: -webkit-linear-gradient(top, $color-start 0%, $color-stop 100%);
  background: -o-linear-gradient(top, $color-start 0%, $color-stop 100%);
  background: -ms-linear-gradient(top, $color-start 0%, $color-stop 100%);
  background: -webkit-gradient(linear, left top, left bottom, from($color-start), to($color-stop));
  background: linear-gradient(to bottom, $color-start 0%, $color-stop 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$color-start', endColorstr='$color-stop', GradientType=0 );
}

.btn-yellow {
  background-color: $yellow;
  border: 0;
  color: $pink;
  font-family: Arial;
  font-weight: bold;
  font-size: 20px;
  padding: 7px 30px;
  text-transform: uppercase;
  @include box-shadow(8px, 10px, 0, 0, rgba($black, $alpha-p2));
  &:hover {
    box-shadow: none;
    transition: box-shadow 0.3s;
  }
}
.btn-fb {
  display: block;
  color: $white;
  font-size: 16px;
  line-height: 45px;
  text-align: center;
  width: 100%;
  height: 45px;
  max-width: 320px;
  margin: 0 auto 15px;
  letter-spacing: 0.75px;
  border-radius: 6px;
  @include box-shadow(0px, 2px, 5px, 2px, rgba($black, $alpha-p2));
  @include background-fb($blue-light, $blue-dark);
	&:hover {
  	text-decoration: none;
  	color: $white;
  	@include background-fb($blue-light, $blue-light);
  }
}
  
/* Section Slider ======================================================= */
#section-slider {
	height: 500px;
	#mainCarousel {
		position: absolute;
		width: 100%;
		img {
			max-width: 1230px;
	    margin: 0 auto;
	    padding-top: 115px;
		}
	}
	.sec1-contents {
		position: relative;
		.navbar-header {
			a { display: inline-block; }
			img {
				max-width: 250px;
	    	margin-left: 10%;
			}
		}
		nav {
		  right: 15%;
		  left: auto;
		  padding: 0;
		  .navbar-nav {
		    float: right;
		    .nav-item {
		    	background-color: $white;
		    	&:nth-child(even){
		    		border-right: 1px solid $gray-light;
		    	}
		    }
		    
		    a {
		    	color: #353535;
			    text-decoration: none;
			    padding: 15px 23px;
			    display: inline-block;
			    font-family: Flama-Basic, Helvetica, sans-serif;
		    }
		    .nav-item-diagonal {
		    	width: 0;
			    height: 0;
			    border-top: 54px solid $white;
    			border-left: 37px solid transparent;
		    }
			}
		}
		
	}
}

/* FORM */
.form-signup {
	padding-left: 57px;
	font-family: Flama-Basic;
  .form-check-label {
    font-size: 12px;
		color: $white;
  }
  .row {
	  margin-bottom: 7px;
	  .col:first-child {
	    padding: 0 6px 0 0;
	  }
	  .col:last-child {
	  	padding: 0 0 0 6px;
	  }
	  label {
	    margin: 0;
	    font-size: 14px;
	    color: $white;
	  }
	  input, select {
	    width: 100%;
	    padding: 6px 11px;
	    font-family: 'Arial';
	    font-size: 11px;
	    height: 31px;
	  }
	  .form-text {
	  	font-size: 12px;
	  }
  }
  
}

.help-info {
  font-family: Flama-Basic;
  color: $white;
  text-align: center;
  font-size: 12px;
  border-bottom: 1px solid rgba($white, $alpha-p3);
  padding-bottom: 4px;
  margin: 0 30px;
}

 



