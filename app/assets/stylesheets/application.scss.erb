    src: font-url("/assets/flama-basic-webfont.eot") format("eot"), font-url("/assets/flama-basic-webfont.eot?#iefix") format("embedded-opentype"), font-url("/assets/flama-basic-webfont.svg#DkLemonYellowSun") format("svg");
